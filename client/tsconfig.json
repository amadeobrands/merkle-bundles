{
  "compilerOptions": {
    "lib": [
      "es2015",
      "es2017",
      "es2017.object",
      "dom"
    ],
    "outDir": "./dist",
    "downlevelIteration": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
  },
  
  "include": [
    "./src/**/*.ts",
    "../test/client/**/*.ts"
  ]
}